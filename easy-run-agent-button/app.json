{
    "name": "test-app",
    "env": {
        "PROJECT_ID": {
            "description": "The project you want to deploy the agent to",
            "value": "nothing",
            "required": true
        },
        "REGION": {
            "description": "The location you want to deploy the agent to",
            "value": "us-central1",
            "required": true
        }
    },
    "options": {
        "allow-unauthenticated": true,
        "memory": "512Mi",
        "cpu": "1",
        "port": 80,
        "http2": false
    },
    "hooks": {
        "postcreate": {
            "commands": [
                "gcloud run services delete test-app --region $REGION --project $PROJECT_ID --quiet","printenv"
            ]
        }
    }
}